{
  // Use IntelliSense to learn about possible attributes.
  // Hover to view descriptions of existing attributes.
  // For more information, visit: https://go.microsoft.com/fwlink/?linkid=830387
  "version": "0.2.0",
  "configurations": [
    {
      "name": "(gdb) Launch",
      "type": "cppdbg",
      "request": "launch",
      "program": "${workspaceFolder}/build/core/native/linux/linux_window",
      "args": [],
      "stopAtEntry": false,
      "cwd": "${fileDirname}",
      "environment": [],
      "externalConsole": false,
      "MIMode": "gdb",
      "setupCommands": [
        {
          "description": "Enable pretty-printing for gdb",
          "text": "-enable-pretty-printing",
          "ignoreFailures": true
        },
        {
          "description": "Set Disassembly Flavor to Intel",
          "text": "-gdb-set disassembly-flavor intel",
          "ignoreFailures": true
        }
      ]
    },
    {
      "name": "(lldb) Launch",
      "type": "cppdbg",
      "request": "launch",
      "program": "${workspaceFolder}/build/core/native/macos/Debug/mainMacos.app/Contents/MacOS/mainMacos",
      "args": [],
      "stopAtEntry": false,
      "cwd": "${fileDirname}",
      "environment": [],
      "externalConsole": false,
      "MIMode": "lldb"
    },
    {
      "name": "(Windows) Launch",
      "type": "cppvsdbg",
      "request": "launch",
      "program": "${workspaceRoot}/build/core/native/windows/Debug/windows.exe",
      "args": [],
      "stopAtEntry": false,
      "cwd": "${fileDirname}",
      "environment": [],
      "console": "newExternalWindow"
    },
    {
      "name": "VST3PluginTestHost Windows",
      "type": "cppvsdbg",
      "request": "launch",
      "program": "C:/Program Files/Steinberg/VST3PluginTestHost/VST3PluginTestHost.exe",
      "args": ["--pluginfolder", "${command:cmake.buildDirectory}"],
      "stopAtEntry": false,
      "cwd": "${workspaceFolder}",
      "console": "newExternalWindow",
      "preLaunchTask": "CMake: build"
    }
  ]
}
